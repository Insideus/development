<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <include
        android:id="@+id/toolbar"
        layout="@layout/main_toolbar" />

    <LinearLayout
        android:id="@+id/top_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="20dp">

        <ar.com.fennoma.davipocket.ui.controls.RoundedCornerImageView
            android:id="@+id/image"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.4" />

            <TextView
                fontPath="fonts/MyriadPro-Regular.otf"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="FLAT WHITE"
                android:textAllCaps="true"
                android:textColor="@color/red_base_color"
                android:textSize="@dimen/subtitle_text_size" />

            <TextView
                fontPath="fonts/MyriadPro-Regular.otf"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="Deliciosa bebida que combina la fuerza del espresso con la suavidad de la leche vaporizada."
                android:textAllCaps="true"
                android:textColor="@color/text_light_gray_color"
                android:textSize="@dimen/common_text_size" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/price_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_container"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/white_rounded_corners_background"
        android:orientation="horizontal">

        <TextView
            fontPath="fonts/MyriadPro-Regular.otf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:paddingBottom="20dp"
            android:paddingLeft="15dp"
            android:paddingTop="20dp"
            android:text="Precio"
            android:textAllCaps="true"
            android:textColor="@color/text_light_gray_color"
            android:textSize="@dimen/common_text_size" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/activity_background" />

        <TextView
            fontPath="fonts/MyriadPro-Semibold.otf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:drawableLeft="@drawable/davipoints_tiny_logo"
            android:drawablePadding="15dp"
            android:gravity="end"
            android:paddingBottom="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:text="680"
            android:textAllCaps="true"
            android:textColor="@color/common_dark_gray_color"
            android:textSize="@dimen/common_text_size" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/activity_background" />

        <TextView
            fontPath="fonts/MyriadPro-Semibold.otf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:drawableLeft="@drawable/price_indicator"
            android:gravity="end"
            android:paddingBottom="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:text="6.800"
            android:textAllCaps="true"
            android:textColor="@color/common_dark_gray_color"
            android:textSize="@dimen/common_text_size" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_below="@id/price_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>