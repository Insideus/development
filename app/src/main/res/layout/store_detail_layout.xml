<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <include
        android:id="@+id/toolbar"
        layout="@layout/main_toolbar" />

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_bar"
        android:layout_below="@id/toolbar"
        android:background="@color/activity_background">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/activity_background"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/main.collapsing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ar.com.fennoma.davipocket.ui.controls.ResizableImageView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="260dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/placeholder" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white">

                        <ImageView
                            android:id="@+id/brand_logo"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:paddingBottom="20dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="20dp"
                            android:scaleType="center"
                            android:src="@drawable/placeholder_small" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toEndOf="@id/brand_logo"
                            android:orientation="vertical"
                            android:paddingLeft="10dp">

                            <TextView
                                android:id="@+id/name"
                                fontPath="fonts/MyriadPro-Semibold.otf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UNICENTRO"
                                android:textColor="@color/common_dark_gray_color" />

                            <TextView
                                android:id="@+id/address"
                                fontPath="fonts/MyriadPro-Regular.otf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="cra 15 # 127 32 Â· l 1-207"
                                android:textColor="@color/text_light_gray_color" />

                            <TextView
                                android:id="@+id/distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0,4 KM."
                                android:textColor="@color/red_base_color" />

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:src="@drawable/store_upload_icon" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:src="@drawable/store_phone_icon" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:src="@drawable/store_location_icon" />

                        <!--ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:src="@drawable/store_how_to_go_icon" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:paddingBottom="20dp"
                            android:paddingTop="20dp"
                            android:src="@drawable/store_report_icon" /-->

                    </LinearLayout>

                </LinearLayout>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_anchor="@+id/app_bar"
            app:layout_anchorGravity="bottom"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </android.support.design.widget.CoordinatorLayout>

    <RelativeLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">

        <TextView
            fontPath="fonts/MyriadPro-Regular.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/bottom_bar_davi_logo"
            android:text="@string/navigation_drawer_bottom_bar_first_text"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/navigation_drawer_bottom_bar_text_size" />

        <ImageView
            android:id="@+id/bottom_bar_davi_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/navigation_drawer_basic_padding"
            android:src="@drawable/nav_davi_logo_bottom_bar" />

        <TextView
            android:id="@+id/davi_points_amount"
            fontPath="fonts/MyriadPro-Semibold.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/bottom_bar_davi_logo"
            android:text="1.600"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/navigation_drawer_bottom_bar_text_size"
            android:textStyle="bold" />

        <TextView
            fontPath="fonts/MyriadPro-Regular.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/navigation_drawer_spacing_between_text"
            android:layout_toEndOf="@id/davi_points_amount"
            android:text="@string/navigation_drawer_bottom_bar_second_text"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/navigation_drawer_bottom_bar_text_size" />
    </RelativeLayout>

</RelativeLayout>