<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/login_header"
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar_layout"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/login_header" />

    <ImageView
        android:id="@+id/login_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/code_container"
        android:adjustViewBounds="true"
        android:paddingLeft="@dimen/login_side_padding"
        android:paddingRight="@dimen/login_side_padding"
        android:scaleType="fitXY"
        android:src="@drawable/login_app_name" />

    <LinearLayout
        android:id="@+id/code_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/login_input_data_margin_top"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:id="@+id/code_number_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/code_number_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/red_base_color"
                android:textSize="@dimen/number_code_text_size" />

            <EditText
                android:id="@+id/code_number_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:background="@drawable/code_number_background"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/red_base_color"
                android:textSize="@dimen/number_code_text_size" />

            <EditText
                android:id="@+id/code_number_3"
                android:layout_width="80dp"
                android:gravity="center"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/code_number_background"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/red_base_color"
                android:textSize="@dimen/number_code_text_size" />

            <EditText
                android:id="@+id/code_number_4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:background="@drawable/code_number_background"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/red_base_color"
                android:textSize="@dimen/number_code_text_size" />

        </LinearLayout>

        <TextView
            fontPath="fonts/MyriadPro-Regular.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_input_data_margin_bottom"
            android:gravity="center"
            android:text="@string/account_activation_explanation_text"
            android:textColor="@color/gray_text_color"
            android:textSize="14dp" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/forgot_password_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_footer"
        android:layout_marginLeft="@dimen/login_button_side_padding"
        android:layout_marginRight="@dimen/login_button_side_padding"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/login_background"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true"
        tools:targetApi="honeycomb">

        <TextView
            android:id="@+id/request_code"
            fontPath="fonts/MyriadPro-Regular.otf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@drawable/forgot_password_button_border"
            android:gravity="center_vertical|start"
            android:padding="15dp"
            android:text="@string/account_activation_request_code_button"
            android:textColor="@color/login_button_color"
            android:textSize="@dimen/login_input_text_size" />

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/login_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/login_input_data_margin_bottom"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/login_footer" />

</RelativeLayout>