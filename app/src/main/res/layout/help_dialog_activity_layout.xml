<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outside"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:paddingTop="40dp"
        android:paddingBottom="20dp"
        android:background="@drawable/white_rounded_coreners_background"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/toast_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:text="@string/help_dialog_title_1"
            android:textSize="28dp"
            android:textStyle="bold"
            android:textColor="@color/red_title_color"/>

        <TextView
            android:id="@+id/toast_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/darkest_blue_title_color"
            android:text="@string/help_dialog_title_2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20dp"
            android:layout_marginTop="-5dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/toast_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAllCaps="true"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/common_text_size"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/gray_text_color"
            android:text="@string/help_dialog_activity_text"/>

        <ImageView
            android:id="@+id/close_button"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/cancel_ex" />

    </LinearLayout>

</RelativeLayout>