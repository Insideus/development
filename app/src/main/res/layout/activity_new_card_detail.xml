<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/main_toolbar" />


    <RelativeLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/portfolio_card" />

        <EditText
            android:id="@+id/credit_card_number"
            fontPath="fonts/MyriadPro-Regular.otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/expiration_container"
            android:layout_marginBottom="13dp"
            android:layout_marginEnd="@dimen/card_pay_detail_items_margin_end"
            android:layout_marginStart="@dimen/card_pay_detail_items_margin_start"
            android:background="@drawable/new_card_input_background"
            android:hint="@string/new_card_detail_number_hint"
            android:inputType="number"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/red_base_color"
            android:textSize="@dimen/common_text_size" />

        <LinearLayout
            android:id="@+id/expiration_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/credit_card_name"
            android:layout_marginBottom="13dp"
            android:layout_marginEnd="@dimen/card_pay_detail_items_margin_end"
            android:layout_marginStart="@dimen/card_pay_detail_items_margin_start"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/expiration_month"
                fontPath="fonts/MyriadPro-Regular.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/new_card_input_background"
                android:gravity="center"
                android:hint="@string/new_card_detail_month_hint"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="@color/red_base_color"
                android:textSize="@dimen/common_text_size" />

            <EditText
                android:id="@+id/expiration_year"
                fontPath="fonts/MyriadPro-Regular.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/new_card_input_background"
                android:gravity="center"
                android:hint="@string/new_card_detail_year_hint"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="@color/red_base_color"
                android:textSize="@dimen/common_text_size" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/three_digits"
                    fontPath="fonts/MyriadPro-Regular.otf"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:background="@drawable/new_card_input_background"
                    android:gravity="center"
                    android:hint="@string/new_card_detail_cvv_hint"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/red_base_color"
                    android:textSize="@dimen/common_text_size" />
            </FrameLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/credit_card_name"
            fontPath="fonts/MyriadPro-Regular.otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/card_pay_detail_items_margin_bottom"
            android:layout_marginEnd="@dimen/card_pay_detail_items_margin_end"
            android:layout_marginStart="@dimen/card_pay_detail_items_margin_start"
            android:background="@drawable/new_card_input_background"
            android:hint="@string/new_card_detail_card_name_hint"
            android:inputType="number"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textColorHint="@color/red_base_color"
            android:textSize="@dimen/common_text_size" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/my_cards_items_spacing_bar"
        android:paddingEnd="@dimen/my_cards_items_bar_lateral_spacing"
        android:paddingStart="@dimen/my_cards_items_bar_lateral_spacing"
        android:paddingTop="@dimen/my_cards_items_spacing_bar">

        <ImageView
            android:id="@+id/first_card_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/my_cards_not_first_card" />

        <ImageView
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/new_card_save_button" />

        <ImageView
            android:id="@+id/discard_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/my_cards_items_spacing_between_buttons"
            android:layout_toStartOf="@id/save_button"
            android:src="@drawable/new_card_delete_button" />

    </RelativeLayout>

</LinearLayout>