<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/main_toolbar" />

    <RelativeLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/portfolio_card" />

        <LinearLayout
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="105dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/credit_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/new_card_input_background"
                android:hint="NÃšMERO"
                android:textAllCaps="true"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="@color/red_base_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/expiration_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/new_card_input_background"
                    android:gravity="center"
                    android:hint="MM"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/red_base_color" />

                <EditText
                    android:id="@+id/expiration_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/new_card_input_background"
                    android:gravity="center"
                    android:hint="YY"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/red_base_color" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/three_digits"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:background="@drawable/new_card_input_background"
                        android:gravity="center"
                        android:hint="CVV"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="@color/red_base_color" />
                </FrameLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/credit_card_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/new_card_input_background"
                android:hint="NOMBRE DE LA TARJETA"
                android:inputType="number"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textColorHint="@color/red_base_color" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/my_cards_items_spacing_bar"
        android:paddingEnd="@dimen/my_cards_items_bar_lateral_spacing"
        android:paddingStart="@dimen/my_cards_items_bar_lateral_spacing"
        android:paddingTop="@dimen/my_cards_items_spacing_bar">

        <ImageView
            android:id="@+id/first_card_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/my_cards_not_first_card" />

        <ImageView
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/new_card_save_button" />

        <ImageView
            android:id="@+id/discard_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/my_cards_items_spacing_between_buttons"
            android:layout_toStartOf="@id/save_button"
            android:src="@drawable/new_card_delete_button" />

    </RelativeLayout>

</LinearLayout>