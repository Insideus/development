<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/main_toolbar" />

    <RelativeLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/portfolio_card" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.40" />

            <EditText
                android:id="@+id/credit_card_number"
                fontPath="fonts/MyriadPro-Regular.otf"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/card_pay_detail_items_margin_end"
                android:layout_marginStart="@dimen/card_pay_detail_items_horizonal_margin"
                android:layout_weight="0.13"
                android:background="@drawable/new_card_input_background"
                android:hint="@string/new_card_detail_number_hint"
                android:inputType="number"
                android:nextFocusDown="@+id/expiration_month"
                android:nextFocusLeft="@+id/expiration_month"
                android:nextFocusRight="@+id/expiration_month"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textColorHint="@color/red_base_color"
                android:textSize="@dimen/common_text_size" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.04" />

            <LinearLayout
                android:id="@+id/expiration_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/card_pay_detail_items_margin_end"
                android:layout_marginStart="@dimen/card_pay_detail_items_horizonal_margin"
                android:layout_weight="0.13"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/expiration_month"
                    fontPath="fonts/MyriadPro-Regular.otf"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.16"
                    android:background="@drawable/new_card_input_background"
                    android:gravity="center"
                    android:hint="@string/new_card_detail_month_hint"
                    android:inputType="number"
                    android:nextFocusDown="@+id/expiration_year"
                    android:nextFocusLeft="@+id/expiration_year"
                    android:nextFocusRight="@+id/expiration_year"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/red_base_color"
                    android:textSize="@dimen/common_text_size" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05" />

                <EditText
                    android:id="@+id/expiration_year"
                    fontPath="fonts/MyriadPro-Regular.otf"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.16"
                    android:background="@drawable/new_card_input_background"
                    android:gravity="center"
                    android:hint="@string/new_card_detail_year_hint"
                    android:inputType="number"
                    android:nextFocusDown="@+id/cvv"
                    android:nextFocusLeft="@+id/cvv"
                    android:nextFocusRight="@+id/cvv"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/red_base_color"
                    android:textSize="@dimen/common_text_size" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.63">

                    <EditText
                        android:id="@+id/cvv"
                        fontPath="fonts/MyriadPro-Regular.otf"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|end"
                        android:background="@drawable/new_card_input_background"
                        android:gravity="center"
                        android:hint="@string/new_card_detail_cvv_hint"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="@color/red_base_color"
                        android:textSize="@dimen/common_text_size" />
                </FrameLayout>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.04" />

            <EditText
                android:id="@+id/credit_card_name"
                fontPath="fonts/MyriadPro-Regular.otf"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/card_pay_detail_items_margin_end"
                android:layout_marginStart="@dimen/card_pay_detail_items_horizonal_margin"
                android:layout_weight="0.13"
                android:background="@drawable/new_card_input_background"
                android:hint="@string/new_card_detail_card_name_hint"
                android:inputType="text"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textColorHint="@color/red_base_color"
                android:textSize="@dimen/common_text_size" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.13" />

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/favourite_card_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/my_cards_items_spacing_bar"
            android:paddingEnd="@dimen/my_cards_items_bar_lateral_spacing"
            android:paddingStart="@dimen/my_cards_items_bar_lateral_spacing"
            android:paddingTop="@dimen/my_cards_items_spacing_bar"
            android:src="@drawable/favourite_card_selector" />

        <ImageView
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/my_cards_items_spacing_bar"
            android:paddingEnd="@dimen/my_cards_items_bar_lateral_spacing"
            android:paddingStart="@dimen/new_card_padding_between_option_buttons"
            android:paddingTop="@dimen/my_cards_items_spacing_bar"
            android:src="@drawable/new_card_save_button" />

        <ImageView
            android:id="@+id/discard_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/my_cards_items_spacing_bar"
            android:paddingEnd="@dimen/new_card_padding_between_option_buttons"
            android:paddingStart="@dimen/my_cards_items_bar_lateral_spacing"
            android:paddingTop="@dimen/my_cards_items_spacing_bar"
            android:layout_toStartOf="@id/save_button"
            android:src="@drawable/new_card_delete_button" />

    </RelativeLayout>

</LinearLayout>