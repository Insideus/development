<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <include
        android:id="@+id/toolbar"
        layout="@layout/main_toolbar" />

    <FrameLayout
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:background="@color/red_base_color">

        <TextView
            android:id="@+id/menu_title"
            fontPath="fonts/MyriadPro-Regular.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/underlined_title_background"
            android:paddingBottom="@dimen/navigation_drawer_basic_padding"
            android:paddingTop="@dimen/navigation_drawer_basic_padding"
            android:text="@string/otp_payment_subtitle"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/subtitle_text_size" />

    </FrameLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_container"
        android:layout_above="@+id/bottom_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_rounded_corners_background"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/card_logo"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <TextView
                        fontPath="fonts/MyriadPro-Regular.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/card_numbers_replacement"
                        android:textColor="@color/text_light_gray_color"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/dotted_card_text_size" />

                    <TextView
                        android:id="@+id/four_digits"
                        fontPath="fonts/MyriadPro-Semibold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/store_small_spacing"
                        android:textColor="@color/common_dark_gray_color"
                        android:gravity="center_vertical"
                        android:textSize="16dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/dropdown_spinner_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/spinner_down_arrow" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/store_small_spacing"
                android:layout_marginRight="@dimen/store_small_spacing"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/white_rounded_corners_background"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/get_otp_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/otp_payment_generate_button_selector"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/store_medium_spacing"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/receipt_number_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:textColor="@color/red_base_color">

                    <TextView
                        fontPath="fonts/MyriadPro-Regular.otf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/otp_payment_receipt_title"
                        android:textColor="@color/text_light_gray_color"
                        android:background="@drawable/white_rounded_corners_background"
                        android:paddingBottom="15dp"
                        android:gravity="center"
                        android:paddingTop="15dp"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/receipt_number"
                        fontPath="fonts/MyriadPro-Regular.otf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="654321"
                        android:background="@drawable/white_rounded_corners_background"
                        android:layout_marginTop="3dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:gravity="center"
                        android:textColor="@color/login_input_text_color"
                        android:textSize="36dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_rounded_corners_background"
                        android:layout_marginTop="10dp"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/otp_pay_start_count"
                            fontPath="fonts/MyriadPro-Regular.otf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/otp_payment_start_counter_text"
                            android:background="@drawable/white_rounded_corners_background"
                            android:gravity="center"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/red_base_color"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/otp_pay_end_count"
                            fontPath="fonts/MyriadPro-Regular.otf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/otp_payment_end_counter_text"
                            android:background="@drawable/white_rounded_corners_background"
                            android:gravity="center"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/red_base_color"
                            android:textSize="14dp" />

                        <com.liulishuo.magicprogresswidget.MagicProgressBar
                            android:id="@+id/progress_bar"
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            app:mpb_fill_color="@color/red_base_color"
                            android:layout_marginTop="5dp"
                            app:mpb_background_color="@color/activity_background"
                            app:mpb_flat="true"
                            android:layout_below="@+id/otp_pay_start_count"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">

        <TextView
            fontPath="fonts/MyriadPro-Regular.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/bottom_bar_davi_logo"
            android:text="@string/navigation_drawer_bottom_bar_first_text"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/navigation_drawer_bottom_bar_text_size" />

        <ImageView
            android:id="@+id/bottom_bar_davi_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/navigation_drawer_basic_padding"
            android:src="@drawable/nav_davi_logo_bottom_bar" />

        <TextView
            android:id="@+id/footer_davi_points_amount"
            fontPath="fonts/MyriadPro-Semibold.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/bottom_bar_davi_logo"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/navigation_drawer_bottom_bar_text_size"
            android:textStyle="bold" />

        <TextView
            fontPath="fonts/MyriadPro-Regular.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/navigation_drawer_spacing_between_text"
            android:layout_toEndOf="@id/footer_davi_points_amount"
            android:text="@string/navigation_drawer_bottom_bar_second_text"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/navigation_drawer_bottom_bar_text_size" />

    </RelativeLayout>

</RelativeLayout>