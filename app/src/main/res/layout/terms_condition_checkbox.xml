<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkbox_container"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/continue_button"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/check_box_padding_top_and_bottom"
    android:paddingEnd="20dp"
    android:paddingStart="30dp"
    android:paddingTop="@dimen/check_box_padding_top_and_bottom">

    <CheckBox
        android:id="@+id/terms_and_conditions"
        fontPath="fonts/MyriadPro-Regular.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@android:color/transparent"
        android:drawableStart="@drawable/checkbox_selector"
        android:textSize="@dimen/common_text_size" />

    <TextView
        android:id="@+id/terms_and_conditions_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/policy_picker_check_box_terms_and_conditions"
        android:textColor="@color/terms_and_conditions_selector" />

</LinearLayout>