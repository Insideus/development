<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <ar.com.fennoma.davipocket.ui.controls.ResizableImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="260dp"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/brand_logo"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:paddingBottom="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp"
            android:scaleType="center"
            android:src="@drawable/brand_mocked_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@id/brand_logo"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/name"
                fontPath="fonts/MyriadPro-Semibold.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UNICENTRO"
                android:textColor="@color/common_dark_gray_color" />

            <TextView
                android:id="@+id/relevant_data"
                fontPath="fonts/MyriadPro-Regular.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cra 15 # 127 32 Â· l 1-207"
                android:textColor="@color/text_light_gray_color" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0,4 KM."
                android:textColor="@color/red_base_color" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>