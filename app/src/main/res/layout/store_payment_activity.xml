<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <include
        android:id="@+id/toolbar"
        layout="@layout/main_toolbar" />

    <FrameLayout
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:background="@color/red_base_color">

        <TextView
            android:id="@+id/menu_title"
            fontPath="fonts/MyriadPro-Regular.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/underlined_title_background"
            android:paddingBottom="@dimen/navigation_drawer_basic_padding"
            android:paddingTop="@dimen/navigation_drawer_basic_padding"
            android:text="@string/store_payment_subtitle"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/subtitle_text_size" />

    </FrameLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_container"
        android:layout_above="@+id/bottom_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.davivienda.billetera.ui.controls.ResizableImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="260dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/brand_logo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:scaleType="centerInside"
                    android:layout_centerVertical="true"
                    android:src="@drawable/placeholder_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@id/brand_logo"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/store_medium_spacing">

                    <TextView
                        android:id="@+id/name"
                        fontPath="fonts/MyriadPro-Semibold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_dark_gray_color" />

                    <TextView
                        android:id="@+id/address"
                        fontPath="fonts/MyriadPro-Regular.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_light_gray_color" />

                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red_base_color" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="@dimen/store_medium_spacing"
                android:background="@drawable/white_left_rounded_corners_background"
                android:orientation="vertical"
                android:paddingBottom="@dimen/store_largest_spacing"
                android:paddingLeft="@dimen/store_medium_spacing"
                android:paddingTop="@dimen/store_medium_spacing">

                <TextView
                    android:id="@+id/title"
                    fontPath="fonts/MyriadPro-Regular.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/store_payment_selected_products_title_1"
                    android:textAllCaps="true"
                    android:textColor="@color/red_base_color"
                    android:textSize="@dimen/common_text_size" />

                <TextView
                    android:id="@+id/category_title"
                    fontPath="fonts/MyriadPro-Semibold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/store_payment_selected_products_title_2"
                    android:textColor="@color/common_dark_gray_color"
                    android:textSize="@dimen/store_category_title_size"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/store_largest_spacing"/>

            </LinearLayout>

            <EditText
                fontPath="fonts/MyriadPro-Semibold.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/store_small_spacing"
                android:layout_marginRight="@dimen/store_small_spacing"
                android:layout_marginTop="@dimen/store_medium_spacing"
                android:background="@drawable/white_rounded_corners_background"
                android:gravity="center"
                android:hint="@string/discount_coupon"
                android:paddingBottom="@dimen/store_large_spacing"
                android:singleLine="true"
                android:paddingTop="@dimen/store_large_spacing"
                android:textColor="@color/red_base_color"
                android:textColorHint="@color/common_dark_gray_color"
                android:textSize="@dimen/store_category_title_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/store_small_spacing"
                android:layout_marginRight="@dimen/store_small_spacing"
                android:layout_marginTop="3dp"
                android:background="@drawable/white_rounded_corners_background"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/minus_tip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.2"
                    android:paddingBottom="@dimen/store_largest_spacing"
                    android:paddingTop="@dimen/store_largest_spacing"
                    android:scaleType="centerInside"
                    android:src="@drawable/minus_gray_red_button_selector" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/activity_background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        fontPath="fonts/MyriadPro-Regular.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/store_payment_voluntary_tip_title"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tip"
                        fontPath="fonts/MyriadPro-Semibold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red_base_color"
                        android:textSize="15dp" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/activity_background" />

                <ImageView
                    android:id="@+id/plus_tip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:paddingBottom="@dimen/store_largest_spacing"
                    android:paddingTop="@dimen/store_largest_spacing"
                    android:src="@drawable/plus_gray_red_button_selector" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_rounded_corners_background"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/cart_price"
                    fontPath="fonts/MyriadPro-Semibold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_base_color"
                    android:textSize="23dp" />

                <TextView
                    android:layout_marginTop="-4dp"
                    fontPath="fonts/MyriadPro-Regular.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/store_payment_shop_price_title"
                    android:textColor="@color/common_dark_gray_color"
                    android:textSize="15dp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/white_rounded_corners_background"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/card_logo"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <TextView
                        fontPath="fonts/MyriadPro-Regular.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/card_numbers_replacement"
                        android:textColor="@color/text_light_gray_color"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/dotted_card_text_size" />

                    <TextView
                        android:id="@+id/four_digits"
                        fontPath="fonts/MyriadPro-Semibold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/store_small_spacing"
                        android:textColor="@color/common_dark_gray_color"
                        android:gravity="center_vertical"
                        android:textSize="16dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/dropdown_spinner_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/spinner_down_arrow" />

            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/store_small_spacing"
                android:layout_marginRight="@dimen/store_small_spacing"
                android:layout_marginTop="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_rounded_corners_background"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/minus_monthly_fee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.2"
                        android:paddingBottom="@dimen/store_largest_spacing"
                        android:paddingTop="@dimen/store_largest_spacing"
                        android:scaleType="centerInside"
                        android:src="@drawable/minus_gray_red_button_selector" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/activity_background" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            fontPath="fonts/MyriadPro-Regular.otf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/store_payment_monthly_fee_title"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/monthly_fee"
                            fontPath="fonts/MyriadPro-Semibold.otf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red_base_color"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/activity_background" />

                    <ImageView
                        android:id="@+id/plus_monthly_fee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:paddingBottom="@dimen/store_largest_spacing"
                        android:paddingTop="@dimen/store_largest_spacing"
                        android:src="@drawable/plus_gray_red_button_selector" />

                </LinearLayout>

                <View
                    android:id="@+id/monthly_fee_disabler"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/overlay_disabled_color"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/store_small_spacing"
                android:layout_marginRight="@dimen/store_small_spacing"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/white_rounded_corners_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/price_cart_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/payment_cash_amount_icon"/>

                        <TextView
                            fontPath="fonts/MyriadPro-Semibold.otf"
                            android:id="@+id/cash_amount"
                            android:layout_marginTop="@dimen/store_medium_spacing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="@color/common_dark_gray_color"/>

                        <TextView
                            fontPath="fonts/MyriadPro-Regular.otf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/store_payment_cop_subtitle"
                            android:textSize="@dimen/common_text_size"
                            android:textColor="@color/common_dark_gray_color"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/pay_button"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:src="@drawable/card_payment_pay_button_selector"
                        android:layout_marginTop="@dimen/store_medium_spacing"
                        android:layout_marginBottom="10dp"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/store_medium_spacing"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/pay_button_points"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/card_payment_pay_button_selector"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:layout_margin="18dp"
                            android:layout_centerInParent="true"
                            android:visibility="invisible"/>

                        <com.davivienda.billetera.ui.controls.SeekArc
                            android:id="@+id/davipoints_cash_seekbar"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_centerInParent="true"
                            app:rotation="173"
                            app:startAngle="18"
                            app:sweepAngle="342"
                            app:touchInside="false"
                            app:progressColor="#9d9d9d"
                            app:arcColor="#ed1c27"
                            app:progressWidth="12dp"
                            app:arcWidth="12dp"
                            app:roundEdges="true"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/davi_points_cart_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/payment_davi_points_logo"/>

                        <TextView
                            fontPath="fonts/MyriadPro-Semibold.otf"
                            android:id="@+id/davi_points_cart"
                            android:layout_marginTop="@dimen/store_medium_spacing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="@color/common_dark_gray_color"/>

                        <TextView
                            fontPath="fonts/MyriadPro-Regular.otf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/store_payment_davipoints_subtitle"
                            android:textSize="@dimen/common_text_size"
                            android:textColor="@color/common_dark_gray_color"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">

        <TextView
            fontPath="fonts/MyriadPro-Regular.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/bottom_bar_davi_logo"
            android:text="@string/navigation_drawer_bottom_bar_first_text"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/navigation_drawer_bottom_bar_text_size" />

        <ImageView
            android:id="@+id/bottom_bar_davi_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/navigation_drawer_basic_padding"
            android:src="@drawable/nav_davi_logo_bottom_bar" />

        <TextView
            android:id="@+id/footer_davi_points_amount"
            fontPath="fonts/MyriadPro-Semibold.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/bottom_bar_davi_logo"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/navigation_drawer_bottom_bar_text_size"
            android:textStyle="bold" />

        <TextView
            fontPath="fonts/MyriadPro-Regular.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/navigation_drawer_spacing_between_text"
            android:layout_toEndOf="@id/footer_davi_points_amount"
            android:text="@string/navigation_drawer_bottom_bar_second_text"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/navigation_drawer_bottom_bar_text_size" />

    </RelativeLayout>

</RelativeLayout>