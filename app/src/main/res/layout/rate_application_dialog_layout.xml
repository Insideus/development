<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/white_rounded_coreners_background"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        android:paddingTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rate_app_dialog_title_1"
            android:textColor="@color/red_title_color"
            android:textSize="28dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:text="@string/rate_app_dialog_title_2"
            android:textColor="@color/darkest_blue_title_color"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/rate_app_dialog_text"
            android:textAllCaps="true"
            android:textColor="@color/gray_text_color"
            android:textSize="@dimen/common_text_size" />

        <android.support.v7.widget.CardView
            android:id="@+id/rate_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_button_side_padding"
            android:layout_marginRight="@dimen/login_button_side_padding"
            android:layout_marginTop="@dimen/login_input_margin_top"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/login_button_color"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            tools:targetApi="honeycomb">

            <TextView
                fontPath="fonts/MyriadPro-Semibold.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/rate_app_dialog_rate_button"
                android:textColor="@color/login_button_text_color"
                android:textSize="@dimen/login_input_text_size"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/remember_later"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_button_side_padding"
            android:layout_marginRight="@dimen/login_button_side_padding"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/login_background"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            tools:targetApi="honeycomb">

            <TextView
                fontPath="fonts/MyriadPro-Regular.otf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@drawable/forgot_password_button_border"
                android:gravity="center_vertical|start"
                android:padding="15dp"
                android:text="@string/rate_app_dialog_remember_later_button"
                android:textColor="@color/login_button_color"
                android:textSize="@dimen/login_input_text_size" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_button_side_padding"
            android:layout_marginRight="@dimen/login_button_side_padding"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/login_background"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            tools:targetApi="honeycomb">

            <TextView
                fontPath="fonts/MyriadPro-Regular.otf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@drawable/forgot_password_button_border"
                android:gravity="center_vertical|start"
                android:padding="15dp"
                android:text="@string/rate_app_dialog_cancel_button"
                android:textColor="@color/login_button_color"
                android:textSize="@dimen/login_input_text_size" />

        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>