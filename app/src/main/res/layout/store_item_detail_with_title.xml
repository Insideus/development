<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginTop="7dp"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/red_top_rounded_background"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            fontPath="fonts/MyriadPro-Semibold.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/store_item_detail_additional_title"
            android:textAllCaps="true"
            android:textSize="@dimen/configuration_name_text_size"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/item_quantity"
            fontPath="fonts/MyriadPro-Semibold.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textAllCaps="true"
            android:ellipsize="end"
            android:textSize="@dimen/configuration_quantity_text_size"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>